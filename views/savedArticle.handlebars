{{!-- navbar --}}
<div class="container">
   <nav style="background-color: steelblue" class="navbar navbar-expand-lg navbar-light bg-light">
        <a class="navbar-brand" style="color:white" href="#">Mongo Scraper</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false"
            aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav">
                <li class="nav-item active">
                    <a style="color:tomato" href="/">Home
                            <span class="sr-only">(current)</span>
                        </a>
                </li>
                <li class="nav-item">
                    <a style="color:white" href="/savedArticles">Saved Articles</a>
                </li>
            </ul>
        </div>
    </nav>

    {{!-- Modal goes here --}}
    <div class="modal fade" id="notesModal" tabindex="-1" role="dialog" aria-labelledby="notesModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="notesModalLabel"></h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div id="displaynotes">
                        {{!--Saved Notes display here --}}
                    </div>
                    <form>
                        <div class="form-group">
                            <textarea class="form-control z-depth-1" id="bodyinput" rows="3" placeholder="New Note"></textarea>
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-primary" id="savenote">Save Note</button>
                </div>
            </div>
        </div>
    </div>

    <div style="background-image:url('./images/NYT.jpeg');background-size: cover;
	background-position: center;
	background-repeat: no-repeat; height: calc(50vh - 66px);" class="jumbotron">
        <h1 style="text-align:center; color:white">SAVED ARTICLES</h1>
        <p style="text-align:center; color:white">YOUR SAVED ARTICLES</p>

    </div>
    <div class="row">
        <div id="search-results" class="col-12">
            {{#each articles}}
                <div {{this.id}}>
                <div style="color:white; background-color:steelblue" class="card">
                    <h1 class="card-header">{{this.title}}</h1>
                       <p>
                        <a href={{this.link}} class="btn btn-info btn-sm mr-2" target="_blank">READ</a>
                        <button style="color:black; background-color:greenyellow" class="btn btn-primary btn-sm mr-2" id="viewnotes" data-id={{this.id}}>NOTES ({{this.notes.length}})</button>
                        <button style="color:white; background-color:rgb(235, 13, 13)" class="btn btn-danger btn-sm float-sm-right" id="deletearticle"
                            data-id={{this.id}}>DELETE</button>
                    </p>
                    <div class="card-body">
                        <h4>{{this.summary}}</h4>
                    </div>
                </div>
            </div>
            {{/each}}


            <div class="col-lg-12">

                {{!-- Hide #noarticles div if we have articles --}} {{!-- We are doing it this way so we can control the div later via JQuery--}}
                {{#if articles}}
                <div class="card" id="noarticles" style="display: none;">
                    {{else}}
                    <div style="background-color:steelblue; color:white" class="card" class="card" id="noarticles">
                        <h3 class="card-header text-white text-center">
                            Uh Oh. Looks like we don't have any saved articles.
                        </h3>
                    </div>
                    {{/if}}
                </div>

            </div>
        </div>
    </div>
</div>