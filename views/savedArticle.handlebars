{{!-- navbar --}}
<div class="container">
    <nav style="background-color: steelblue" class="navbar navbar-default">
        <div class="container-fluid">
            <!-- Brand and toggle get grouped for better mobile display -->
            <div class="navbar-header">
                <a class="navbar-brand" style="color:white" href="#">Mongo Scraper</a>
            </div>

            <!-- Collect the nav links, forms, and other content for toggling -->
            <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                <ul class="nav navbar-nav">
                    <li class="active">
                        <a style="color:tomato" href="/">Home
                            <span class="sr-only">(current)</span>
                        </a>
                    </li>
                    <li>
                        <a style="color:white" href="/savedArticles">Saved Articles</a>
                    </li>

                </ul>
            </div>
            <!-- /.navbar-collapse -->
        </div>
        <!-- /.container-fluid -->
    </nav>

    {{!-- Modal goes here --}}
    <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel"></h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div id="displaynotes">
                        {{!--Saved Notes display here --}}
                    </div>
                    <form>
                        <div class="form-group">
                            <label for="message-text" class="col-form-label">New Note</label>
                            <textarea class="form-control" id="bodyinput" rows="3" placeholder="New Note"></textarea>
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-primary" id="savenote">Save Note</button>
                </div>
            </div>
        </div>
    </div>

    <div style="background-image:url('./images/NYT.jpeg');background-size: cover;
	background-position: center;
	background-repeat: no-repeat; height: calc(50vh - 66px);" class="jumbotron">
        <h1 style="text-align:center; color:white">SAVED ARTICLES</h1>
        <p style="text-align:center; color:white">YOUR SAVED ARTICLES</p>

    </div>
    <div class="row">
        <div class="col-12">
                {{#each articles}}
                    <div id="{{this.id}}" class="panel panel-default">
                        <div style="color:white; background-color:steelblue" class="panel-heading">
                            <div class="article-heading">
                                <h1>{{this.title}}</h1>
                            </div>
                            <p>
                                <a style="color:black; background-color:greenyellow" href="#" class="btn btn-primary" role="button" data-id="{{this.id}}">Notes ({{this.notes.length}})</a>
                                <a style="color:white; background-color:rgb(235, 13, 13)" href="#" class="btn btn-default" role="button" data-id="{{this.id}}">Delete</a>
                            </p>
                        </div>
                        <div class="panel-body">
                            <h4>{{this.summary}}</h4>
                        </div>
                    </div>
                {{/each}}
                

            <div class="col-lg-12">

                {{!-- Hide #noarticles div if we have articles --}} {{!-- We are doing it this way so we can control the div later via JQuery--}}
                {{#if articles}}
                <div class="card" id="noarticles" style="display: none;">
                    {{else}}
                    <div style="background-color:steelblue; color:white" class="card" class="card" id="noarticles">
                            <h3 class="card-header text-white text-center">
                            Uh Oh. Looks like we don't have any saved articles.
                        </h3>
                    </div>
                    {{/if}}
                </div>

            </div>
        </div>
    </div>
</div>